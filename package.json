{
  "name": "meeting-bot-typescript",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:electron": "node build-electron.js",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "electron": "npm run build:electron && electron .",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3000 && npm run build:electron && electron .\"",
    "electron:build": "npm run build && npm run build:electron && electron-builder",
    "clean": "rimraf .next out dist"
  },
  "build": {
    "appId": "com.meetingbot.app",
    "productName": "MeetingBot",
    "files": [
      "out/**/*",
      "dist/electron/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@deepgram/sdk": "^3.2.0",
    "next": "14.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  }
}
